package components

import (
	"stickies/internal/services"
	"strconv"
)

templ RenderSticky(s services.Sticky) {
	<style>
		.sticky {
            height: 100px;
            width: 100px;

            padding: 4px;
            border: 1px solid black;
        }	

		.content {
			overflow: hidden;
			text-overflow: ellipsis;
		}

		.delete-x {
			float: right;
			color: red;
			cursor: pointer;
			border: 1px solid red;
			padding: 0 4px;
		}
	</style>

	<div id={ "sticky-" + strconv.Itoa(s.Id) } class="sticky">
		<span hx-delete={ "/stickies/" + strconv.Itoa(s.Id) } hx-swap="outerHTML" hx-target={ "#sticky-" + strconv.Itoa(s.Id) } class="delete-x">X</span>
		<p class="content">{ s.Content }</p>
	</div>
}
